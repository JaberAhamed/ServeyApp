<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.SettingsFragment"
        android:orientation="vertical"
        android:background="#F7F6F6"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_questionsize"
            android:text="5/5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tv_questionsize"
            android:id="@+id/card_drop"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"

                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_dropID"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/spn_multichoise"
                    />





            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@id/card_drop"
            android:id="@+id/car_multi"
            android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorPrimary"

                   android:textSize="18sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="8dp"

                   android:id="@+id/tv_multichoiseID"/>

               <RadioGroup
                   android:layout_width="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:id="@+id/rdgroupID"
                   android:layout_height="wrap_content">
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:id="@+id/rd_1"
                       android:layout_height="wrap_content"/>
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:id="@+id/rd_2"
                       android:layout_height="wrap_content"/>
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:id="@+id/rd_3"
                       android:layout_height="wrap_content"/>
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:id="@+id/rd_4"
                       android:layout_height="wrap_content"/>
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:id="@+id/rd_5"
                       android:layout_height="wrap_content"/>

                </RadioGroup>




           </LinearLayout>






        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@id/car_multi"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:id="@+id/tv_number"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:id="@+id/et_nmberId"
                android:inputType="number"
                android:layout_height="wrap_content"/>




        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_previousID"

                android:text="Previous"
                android:background="@drawable/btn_shape"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_doneID"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="DONE"
                android:background="@drawable/btn_shape"
                android:textColor="@color/white"
                android:textStyle="bold"

                android:layout_height="wrap_content"/>

        </LinearLayout>



    </RelativeLayout>
</layout>

